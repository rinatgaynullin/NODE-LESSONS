<div style="">
    <h1>News</h1>
        <div style="display: flex;
            flex-direction:row;
            flex-wrap:wrap;
            margin: 0 auto;"
        >
            {{#if news}}
                {{#each news }}
                
                    <p style="width: 200px; margin: 5px; border: 1px #000 solid;">{{text}}</p>
                {{/each}}
            {{/if}}
        </div>
</div>




<h2>How many news you want to view?</h2>
<form method="POST" action="/news">
    <input type="text" name="param" placeholder="Сколько новостей показывать">
    <input type="submit">
</form>